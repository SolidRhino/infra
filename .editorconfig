# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Ansible YAML files - 6 space indent per your setup
[{playbooks,tasks}/**/*.{yml,yaml}]
indent_style = space
indent_size = 6

# Regular YAML files - 2 space indent
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Group vars and host vars - 2 space indent
[{group_vars,host_vars}/**/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Inventory files - 2 space indent
[inventory.yml]
indent_style = space
indent_size = 2

# Nix files - 2 space indent
[*.nix]
indent_style = space
indent_size = 2

# Justfile - 4 space indent
[justfile]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Environment files
[.envrc]
indent_style = space
indent_size = 2

# Config files
[*.{cfg,conf}]
indent_style = space
indent_size = 4

# Git files
[.gitmodules]
indent_style = tab
indent_size = 4